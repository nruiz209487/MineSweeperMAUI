<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MineSweeper.Pages.ErrorPage"
             Title="ErrorPage"
             Background="White">
    <VerticalStackLayout Padding="50" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">
        <Label Text="Lo sentimos, hay un problema en el servidor intentelo de nuevo mas tarde (-_-) ."
               FontSize="24"
               HorizontalOptions="Center"
               TextColor="#333" />

        <Image Source="{Binding Img}" 
               Aspect="AspectFit"
               WidthRequest="300"
               HeightRequest="200"
               HorizontalOptions="Center" />
        <Button 
            Text="Volver a Jugar" 
            FontSize="18" 
            BackgroundColor="#1976D2" 
            TextColor="White" 
            CornerRadius="10" 
            Padding="10" 
            HorizontalOptions="Center" 
            WidthRequest="200"
            Clicked="GoBackButton_Clicked" />
    </VerticalStackLayout>

</ContentPage>